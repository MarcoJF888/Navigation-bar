<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:red="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/layout_tab_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <com.self.template.FlowRadioGroup
        android:id="@+id/tabMain"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_gravity="bottom"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@color/grey_f6f6f6">

        <RadioButton
            android:id="@+id/btnHome"
            style="@style/main_tab"
            android:drawableTop="@drawable/btn_home_selector"
            android:text="首页" />

        <RadioButton
            android:id="@+id/btnNews"
            style="@style/main_tab"
            android:drawableTop="@drawable/btn_home_selector"
            android:text="资讯" />

        <RadioButton
            android:id="@+id/btnDiscovery"
            style="@style/main_tab"
            android:drawableTop="@drawable/btn_home_selector"
            android:text="发现" />

        <RadioButton
            android:id="@+id/btnMe"
            style="@style/main_tab"
            android:drawableTop="@drawable/btn_home_selector"
            android:text="我的" />

    </com.self.template.FlowRadioGroup>

</LinearLayout>